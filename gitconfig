[user]
	name = Daniel Wagner
	email = dnl.wagner@gmail.com
[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore
[color]
	diff = auto
	status = auto
	branch = auto
[credential]
	helper = cache --timeout=3600
[alias]
	st = status --short
	ci = commit
	co = checkout
  di = diff
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  df = diff --color --color-words --abbrev
[push]
	default = current
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
  prompt = false
[apply]
  whitespace = fix
